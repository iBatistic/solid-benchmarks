#!/bin/bash

# Source tutorial run functions
. $WM_PROJECT_DIR/bin/tools/RunFunctions

# Source solids4Foam scripts
source solids4FoamScripts.sh

SUFFIX="vertexCentredLinearGeometry"

BASE="base"

if [[ -d "${SUFFIX}.1" ]]
then
    echo "Case ${SUFFIX}.1 already exists: please remove it"; echo
    exit 1;
fi

# Run cases
for i in `seq 1 5`;
do
    CASE="${SUFFIX}.$i"
    echo "Running ${CASE}"

    # Copy template case
    cp -r "${BASE}" "${CASE}"

    # Replace the blockMeshDict
    cd "${CASE}"
    \cp "system/blockMeshDict.${i}" system/blockMeshDict

    # Create the mesh
    solids4Foam::runApplication blockMesh

    # Run the solver
    solids4Foam::runApplication solids4Foam

    # Navigate back to the parent directory
    cd ..
done

# Extract the results
echo "Running Allpost"
./Allpost
