FoamFile
{
    version     2.0;
    format      binary;
    class       pointScalarField;
    arch        "LSB;label=32;scalar=64";
    location    "0";
    object      ownedByThisProc;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 0 0 0 0];


internalField   uniform 1;

boundaryField
{
    back
    {
        type            empty;
    }
    front
    {
        type            empty;
    }
    left
    {
        type            calculated;
    }
    top
    {
        type            calculated;
    }
    right
    {
        type            calculated;
    }
    bottom
    {
        type            calculated;
    }
}


